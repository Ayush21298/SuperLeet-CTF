<div class="container">
  <h2>Users enrolled in SuperLee-CTF</h2>
  <hr>
  <table class="table table-striped table-hover ">
  <thead>
    <th>ID</th>
    <th>Admin</th>
    <th>Name</th>
    <th>Username</th>
    <th>Email-ID</th>
    <th>Level</th>
    <th colspan=3>Admin Controls</th>
  </thead>

  <% _.each(users,function(user){ %>
  <tr data-id=<%= user.id %> data-modal="user">
    <td><%= user.id %></td>
    <% if(user.admin) { %>
    <td><img src="https://d19rpgkrjeba2z.cloudfront.net/dc25e9dfd0ebe580/static/nextdoorv2/images/icons/icon-check-ok@2x.png" width="30"></td>
    <% } else { %>
    <td><img src="http://www.freeiconspng.com/uploads/remove-icon-png-15.png" width="30"></td>
    <% } %>
    <td><%= user.name %></td>
    <td><%= user.username %></td>
    <td><%= user.email %></td>
    <td><%= user.level %></td>

    <% if (!(session.User.admin || session.User.id===user.id)) { %>
    <td><a href="/user/show/<%= user.id %>" class="btn btn-sm btn-primary">Show</a></td>
    <td><a href="/user/edit/<%= user.id %>" class="btn btn-sm btn-warning" disabled>Edit</a></td>
    <td>
      <form action="/user/destroy/<%= user.id %>" method="post">
        <input type="hidden" name="_method" value="delete"/>
      <input type="submit" class="btn btn-sm btn-danger" disabled value="Delete"/>
      <input type="hidden" name="_csrf" value="<%= _csrf %>"/>
    </form>
    </td>
    <% } %>
    <% if (session.User.admin || session.User.id===user.id) { %>
    <td><a href="/user/show/<%= user.id %>" class="btn btn-sm btn-primary">Show</a></td>
    <td><a href="/user/edit/<%= user.id %>" class="btn btn-sm btn-warning">Edit</a></td>
    <td>
      <form action="/user/destroy/<%= user.id %>" method="post">
        <input type="hidden" name="_method" value="delete"/>
      <input type="submit" class="btn btn-sm btn-danger" value="Delete"/>
      <input type="hidden" name="_csrf" value="<%= _csrf %>"/>
    </form>
    </td>
    <% } %>
  </tr>

  <% }) %>
</table>
</div>
