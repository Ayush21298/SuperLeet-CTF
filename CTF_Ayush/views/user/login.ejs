<style>
.col-lg-2 {
   text-Align:left !important;
}

</style>
<br><br><br><br><br>
<div class="row">
          <div class="col-lg-4 col-lg-offset-4">
            <div class="well bs-component">
              <form class="form-horizontal form-signin" method="post" action="/session/create">
                <fieldset>
                  <legend>Log-in</legend>


                  <div class="form-group">

                    <% if(flash && flash.err) { %>
                      <ul class = "alert" style="background:#555">
                        <% Object.keys(flash.err).forEach(function(error){ %>
                        <li><%- JSON.stringify(flash.err[error]) %></li>
                      <% }) %>
                    </ul>
                    <% } %>

                  </div>




                  <div class="form-group">
                    <label for="user" class="col-lg-2 control-label">Username</label>
                    <div class="col-lg-10">
                      <input type="text" class="form-control" id="user" placeholder="Username" name='username'>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="inputPassword" class="col-lg-2 control-label">Password</label>
                    <div class="col-lg-10">
                      <input type="password" class="form-control" id="inputPassword" placeholder="Password" name='password'>
                    </div>
                  </div>
                 
                      
                  <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-4">
                      <button type="reset" class="btn btn-default">Reset</button>&emsp;&emsp;&emsp;&emsp;
                      <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                  </div>
                  <div class="form-group">
                    <input type="hidden" name="_csrf" value="<%= _csrf %>" />
                  </div>
                </fieldset>
              </form>
            </div>
          </div>
        </div>
